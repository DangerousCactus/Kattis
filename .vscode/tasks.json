{
    "type": "shell",
    "label": "C/C++: g++ build active file",
    "command": "/usr/bin/g++",
    "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
    ],
    "options": {
        "cwd": "${workspaceFolder}"
    },
    "group": {
        "kind": "build",
        "isDefault": true
    },

    "version": "2.0.0",
    "tasks": [
        {
            "label": "Submit to Kattis",
            "type": "shell",
            "command": "python3 .submit.py ${fileBasename} -f",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}